@model PresentationLayer.Models.RegisterViewModel
<div class="col-md-1"></div>
@*<div id="page-wrapper" class="" >*@


@*<div class="main-page">
    <div class="grids">*@
<div class="panel panel-widget col-md-10">
    <div class="progressbar-heading grids-heading">
        <h2>Add New User</h2>
    </div>

    <div class="login-body">
      <p class="alert-danger">@ViewBag.errorMessage</p>
        @using (Html.BeginForm("Register", "Account", new {
                ReturnUrl = ViewBag.ReturnUrl
            }, FormMethod.Post, new {
                @class = "login-info",
                role = "form"
            })) {
            @Html.AntiForgeryToken()

            @Html.TextBoxFor(m => m.Email, new {
           @class = "user",
           placeholder = "Email",
           required = "",
           name = "email"
       })
            @Html.ValidationMessageFor(m => m.Email, "", new {
           @class = "text-danger"
       })

            @Html.TextBoxFor(m => m.UserName, new {
           @class = "user",
           placeholder = "Name",
           required = "",
           name = "email"
       })
            @Html.ValidationMessageFor(m => m.UserName, "", new {
           @class = "text-danger"
       })

            @Html.PasswordFor(m => m.Password, new {
           @class = "ock",
           placeholder = "Password",
           name = "password"
       })
            @Html.ValidationMessageFor(m => m.Password, "", new {
           @class = "text-danger"
       })

            @Html.PasswordFor(m => m.ConfirmPassword, new {
           @class = "user",
           placeholder = "Confirm Password",
           name = "password"
       })
            @Html.ValidationMessageFor(m => m.Email, "", new {
           @class = "text-danger"
       })

            @Html.Label("User Role", new {
           @class = "user"
       })
            @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, " ")

            <input type="submit" name="Sign In" value="Register">
        }

    </div>

</div>

<div class="col-md-1"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



