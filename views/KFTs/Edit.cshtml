@model DataLayer.Entities.MCDT.KFT

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Add KFT Lab Exam Results</h4>
</div>
<div class="modal-body">
    @using(Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-body">

            @Html.ValidationSummary(true, "", new {
           @class = "text-danger"
       })
            @Html.HiddenFor(model => model.MCDT_ID)

            <div class="form-group">
                @Html.LabelFor(model => model.MCDT_units, htmlAttributes: new {
               @class = "control-label col-md-2"
           })
                @Html.EnumDropDownListFor(model => model.MCDT_units, htmlAttributes: new {
               @class = "form-control1", disabled = ""
           })
                @Html.ValidationMessageFor(model => model.MCDT_units, "", new {
               @class = "text-danger"
           })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MCDT_type, htmlAttributes: new {
               @class = "control-label col-md-2"
           })
                @Html.EnumDropDownListFor(model => model.MCDT_type, htmlAttributes: new {
               @class = "form-control1", disabled = ""
           })
                @Html.ValidationMessageFor(model => model.MCDT_type, "", new {
               @class = "text-danger"
           })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MCDT_date, htmlAttributes: new {
               @class = "control-label col-md-2"
           })
                @Html.EditorFor(model => model.MCDT_date, new {
               htmlAttributes = new {
                   @class = "form-control", @id = "disabledinput"
               }
           })
                @Html.ValidationMessageFor(model => model.MCDT_date, "", new {
               @class = "text-danger"
           })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LabExam_data_in, htmlAttributes: new {
               @class = "control-label col-md-2"
           })
                @Html.EditorFor(model => model.LabExam_data_in, new {
               htmlAttributes = new {
                   @class = "form-control", @id = "disabledinput"
               }
           })
                @Html.ValidationMessageFor(model => model.LabExam_data_in, "", new {
               @class = "text-danger"
           })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LabExam_date_out, htmlAttributes: new {
               @class = "control-label col-md-2"
           })
                @Html.EditorFor(model => model.LabExam_date_out, new {
               htmlAttributes = new {
                   @class = "form-control", @id = "disabledinput"
               }
           })
                @Html.ValidationMessageFor(model => model.LabExam_date_out, "", new {
               @class = "text-danger"
           })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BUN, htmlAttributes: new {
               @class = "control-label col-md-2"
           })
                @Html.EditorFor(model => model.BUN, new {
               htmlAttributes = new {
                   @class = "form-control"
               }
           })
                @Html.ValidationMessageFor(model => model.BUN, "", new {
               @class = "text-danger"
           })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Creatinine, htmlAttributes: new {
               @class = "control-label col-md-2"
           })
                @Html.EditorFor(model => model.Creatinine, new {
               htmlAttributes = new {
                   @class = "form-control"
               }
           })
                @Html.ValidationMessageFor(model => model.Creatinine, "", new {
               @class = "text-danger"
           })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.uricAcid, htmlAttributes: new {
               @class = "control-label col-md-2"
           })
                @Html.EditorFor(model => model.uricAcid, new {
               htmlAttributes = new {
                   @class = "form-control"
               }
           })
                @Html.ValidationMessageFor(model => model.uricAcid, "", new {
               @class = "text-danger"
           })
            </div>

            <div class="modal-footer">
                <input type="submit" value="Save" class="btn btn-primary" id="button" onclick="goBack();" />
            </div>
        </div>
    }
</div>

<script src="/Scripts/jquery-1.11.1.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts_Ajax/bootstrap.js"></script>
<script src="~/Scripts_Ajax/jquery.validate.js"></script>
<script src="~/Scripts_Ajax/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript">

    $(function () {
        //allow validation framework to parse DOM
        $.validator.unobtrusive.parse('form');
    });

    function goBack() {
        window.history.go("../LabExams/listpatientlabexams");
        location.reload();
    };
</script>
