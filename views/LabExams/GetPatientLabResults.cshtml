
@{
    ViewBag.Title = "GetPatientLabResults";
    Layout = "~/Views/Shared/LabTec.cshtml";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="progressbar-heading grids-heading">
            <h2>Title</h2>
        </div>
        <div class="panel panel-widget">
            <div class="tables">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayName("MCDT Type")
                            </th>
                            <th>
                                @Html.DisplayName("MCDT Date")
                            </th>
                            <th>
                                @Html.DisplayName("Lab Date Out")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @for(int i = 0; i < ViewBag.patientExams.Count; i++) {
                            <tr>
                                <td>
                                    @Html.ActionLink("Display Statistics", "GetStatistics", new {
                                   mcdtType = ViewBag.patientExams[i].MCDT_type, id = ViewBag.patientExams[i].MCDT_ID
                               })
                                </td>
                                <td>
                                    @ViewBag.patientExams[i].MCDT_type
                                </td>
                                <td>
                                    @ViewBag.patientExams[i].MCDT_date
                                </td>
                                <td>
                                    @ViewBag.patientExams[i].LabExam_date_out
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
