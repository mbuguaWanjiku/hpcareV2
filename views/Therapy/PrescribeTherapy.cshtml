

<div ng-controller="TherapyController as vm" class="well col-mod-6 pull-left">
    <form name="therapyForm" ng-submit="saveToBasket()">
        <div class="form-control-wrapper">
            <input type="text" id="therapyDescription" name="therapyDescription" ng-model="description;" class="form-control floating-label"
                   placeholder="Description" ng-minlength="5" ng-maxlength="15" required
                   ng-class="{errorinput:submitted && therapyForm.therapyDescription.$invalid}">
            <span class="e" ng-show="submitted && therapyForm.therapyDescription.$invalid">Please provide information</span>

        </div>


        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Start Date</th>
                    <th>End Date</th>

                </tr>
            </thead>
            <tbody class="table table-condensed">
                @*<tr ng-repeat="event in vm.events track by $index">*@

                <tr>
                    <td>
                        <p class="input-group">
                            <input type="text"
                                   class="form-control"
                                   readonly
                                   uib-datepicker-popup="dd MMMM yyyy"
                                   ng-model="vm.event.startsAt"
                                   is-open="vm.event.startOpen"
                                   close-text="Close">
                            <span class="input-group-btn">
                                <button type="button"
                                        class="btn btn-default"
                                        ng-click="vm.toggle($event, 'startOpen', vm.event)">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </button>
                            </span>
                        </p>
                        <div uib-timepicker
                             ng-model="vm.event.startsAt"
                             hour-step="1"
                             minute-step="15"
                             show-meridian="true">
                        </div>
                    </td>
                    <td>
                        <p class="input-group">
                            <input type="text"
                                   class="form-control"
                                   readonly
                                   uib-datepicker-popup="dd MMMM yyyy"
                                   ng-model="vm.event.endsAt"
                                   is-open="vm.event.endOpen"
                                   close-text="Close">
                            <span class="input-group-btn">
                                <button type="button"
                                        class="btn btn-default"
                                        ng-click="vm.toggle($event, 'endOpen', event)">
                                    <i class="glyphicon glyphicon-calendar"></i>
                                </button>
                            </span>
                        </p>
                        <div uib-timepicker
                             ng-model="vm.event.endsAt"
                             hour-step="1"
                             minute-step="15"
                             show-meridian="true">
                        </div>
                    </td>

                </tr>
            </tbody>
        </table>


        <div class="modal-footer">
            @*<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>*@
            <button type="submit" class="btn btn-primary" ng-disabled="therapyForm.$invalid">Add To Basket</button>
        </div>
    </form>
</div>
<!-- //date-picker -->

<div ng-controller="TherapyController as vm" class="well col-mod-6 pull-right" style="width:500px">

    <table class="table table-bordered">
        <caption>Prescribed Drugs</caption>
        <thead>
            <tr>
                <th>Description</th>
                <th>Drug start</th>
                <th>Drug End</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="Therapy in selectedTherapyBuffer">
                <td> {{Therapy.Therapy_designation}} </td>
                <td> {{Therapy.Therapy_start_hour}} </td>
                <td> {{Therapy.Therapy_end_hour}} </td>
                <td>
                    <span ng-click="deleteTherapy(Therapy)" class="glyphicon glyphicon-trash" style="color:blue"></span>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" ng-click="saveTherapies()">Save Therapies</button>
    </div>
</div>





